@model RegisterViewModel

@{ 
    var userId = ViewBag.UserId;
}

<h3 id="title" class="text-primary text-center mt-4">@ViewBag.Title@Model.Name</h3>

<div class="row container-fluid container-center">
    <form method="post" asp-controller="account" asp-action="edituser">

        @*Име на потребител*@
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-sm-2"><label>Име:</label></div>
            <div style="width:400px">
                <input asp-for="Name" class="form-control" id="nameTb"/>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        @*Email на потребител*@
        <div class="row mt-2">
            <div class="col-sm-2"><label>Email:</label></div>
            <div style="width:400px">
                <input asp-for="Email" class="form-control" id="emailTb"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>

        @*Ниво на достъп на потребител на потребител*@
        <div class="row mt-2">
            <label asp-for="@Model.Role" class="col-sm-2 col-form-label"></label>
            <div style="width:400px">
                <select asp-for="@Model.Role" class="custom-select mr-sm-2"
                        asp-items="@Html.GetEnumSelectList<Role>()" id="roleCb"></select>
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
            </div>
        </div>

        @*Бутон "Изтрий"*@
        <div class="horizontal-center">
            <button id="btnSubmit" class="btn btn-danger mt-2" asp-action="deleteuser" asp-route-id="@userId">Изтрий</button>
            <a class="btn btn-danger mt-2" asp-action="editusers">Отмени</a>
        </div>
    </form>
</div>