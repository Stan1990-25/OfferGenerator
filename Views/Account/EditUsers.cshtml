@model ListUsersViewModel

<div class="container-fluid container-center mt-2">

    <h3 class="text-primary text-center">Списък с потребители</h3>

    @*Таблица с всички потребители*@
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Име</th>
                <th>Email адрес</th>
                <th>Ниво на достъп</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <td>@Model.Users[i].Name</td>
                    <td>@Model.Users[i].Email</td>
                    <td>@Model.Users[i].Role</td>
                    <td><a class="btn btn-warning" asp-action="edituser" asp-route-id="@Model.Users[i].Id">Промени</a></td>
                    <td><a class="btn btn-danger" asp-action="deleteuser" asp-route-id="@Model.Users[i].Id">Изтрий</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
