@inject SignInManager<TMUser> signInManager;

<!DOCTYPE html>

<html lang="en">
<head>
    <title>TMVarna Management</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/lib/twitter-bootstrap/css/CustomStyles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar bg-dark">
            <div class="navbar">
                <ul class="navbar-nav mr-auto list-group-horizontal">
                    <li>
                        <a class="navbar-brand" href="/home/index">
                            <img src="~/images/LOGO TM.bmp" class="rounded-circle" width="100" height="30" />
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-auto">
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("SuperAdmin"))
                    {
                        <li>
                            <a style="font-size:18px" class="nav-link ml-2" href="/account/register">Регистрирай потребител</a>
                        </li>
                        <li>
                            <a style="font-size:18px" class="nav-link ml-2" href="/account/editusers">Промени потребител</a>
                        </li>
                        <li>
                            <a style="font-size:18px" class="nav-link ml-2" href="/account/logout">Излез</a>
                        </li>
                    }
                    else if (signInManager.IsSignedIn(User))
                    {
                        <li>
                            <a style="font-size:18px" class="nav-link ml-2" href="/account/logout">Излез</a>
                        </li>
                    }
                </ul>
            </div>


            <div class="navbar">
                <ul class="navbar-nav ml-auto list-group-horizontal">
                    <li class="nav-item mt-3 mb-3 mr-3">
                        <a style="font-size:24px" class="nav-link" asp-controller="contacts" asp-action="listcontacts">Клиенти</a>
                    </li>
                    <li class="nav-item mt-3 mb-3 mr-3">
                        <a style="font-size:24px" class="nav-link" asp-controller="products" asp-action="listproducts">Продукти</a>
                    </li>
                    <li class="nav-item mt-3 mb-3 mr-3">
                        <a style="font-size:24px" class="nav-link" asp-controller="offers" asp-action="listoffers">Оферти</a>
                    </li>
                </ul>
            </div>

        </nav>
    </div>
    <div>
        @RenderBody()
        @RenderSection("AddContacts", false)
        @RenderSection("Scripts", false)
    </div>
</body>
</html>